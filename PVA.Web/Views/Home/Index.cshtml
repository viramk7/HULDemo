                                    })
                                    .Sortable(sortable => sortable.AllowUnsort(true))
                                    .Filterable()
                                    .NoRecords()
                                    .Resizable(resizable => resizable.Columns(true))
                                    .Scrollable(scrollable => scrollable.Height(560))
                                    .DataSource(dataSource => dataSource
                                    .Ajax()
                                    .ServerOperation(true)
                                    .PageSize(25)
                                    .Model(model =>
                                    {
